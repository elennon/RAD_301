<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
       
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <style>
            #bannerUl {
                display:inline-block;
                width:100%;
                position:relative;
            }
            #bannerUl li img {
                margin-top:20px;      
            }
            #ulBtns {
                display:inline-block;              
            }
            #ulBtns li {
                margin-top:50%;        
            }
            #bus {
                margin-left: 0px;
                margin-top: 50px;             
            }
        </style>
    </head>
    <body>
        <div class="container">            
                    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                      <div class="container">
                        <div class="navbar-header">
                          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                          <a class="navbar-brand" href="#">Project name</a>
                        </div>
                        <div class="navbar-collapse collapse">
                          <form class="navbar-form navbar-right" role="form">
                            <div class="form-group">
                              <input type="text" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                              <input type="password" placeholder="Password" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-success">Sign in</button>
                          </form>
                        </div><!--/.navbar-collapse -->
                      </div>
                    </div>

                    <!-- Main jumbotron for a primary marketing message or call to action -->
                    <div id="topCont" class="jumbotron">
                      <div  class="container">
                            <div  class="nav nav-justified">
                                       <ul id="bannerUl" class="nav navbar-nav navbar-left"  >
                                           <li class="col-sm-6"  ><h1 style="font-family:cursive;">Euro Tours</h1> </li>                                                                              
                                           <li class="col-sm-2"  ><img src="~/Images/bus.png"  /></li>
                                           <li class="col-sm-4"  >
                                               <ul id="ulBtns" class="nav navbar-nav navbar-right">
                                                    <li><input type="button" class="btn btn-success active" value="Create Trip"  onclick="createTrip()" /></li>
                                                    <li><div>@Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-success active" })</div></li>
                                               </ul>                
                                           </li>
                                        </ul>
                            </div>
                        
                            @*<div class="masthead clearfix" >
                                <div class="inner" >
                                       
                                    <ul class="nav navbar-nav navbar-right" >
                                    <li><input type="button" id="btnAddTrip" class="btn btn-success active"  style="margin-bottom:-20px;" value="Create Trip" onclick="createTrip()"  /></li>     
                                    <li>
                                        @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-success active", style="margin-bottom:-20px;" })</li>
                                                   
                                    </ul>
                                </div>
                            </div>*@
                          
                          
                      </div>
                    </div>
      
           
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
       
        </div> <!-- /container -->
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
            @RenderSection("scripts", required: false)
    </body>
</html>
